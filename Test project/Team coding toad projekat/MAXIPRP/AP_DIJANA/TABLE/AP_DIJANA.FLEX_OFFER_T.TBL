  APP_LANGUAGE_ID  NUMBER                       NOT NULL,
  HOT_OFFER        CHAR(1 BYTE),
  STATUS           VARCHAR2(20 BYTE),
  WHO_ADDED        NVARCHAR2(50),
  WHEN_ADDED       DATE,
  WHO_CHANGED      NVARCHAR2(50),
  WHEN_CHANGED     DATE
)
TABLESPACE USERS
PCTFREE    10
INITRANS   1
MAXTRANS   255
STORAGE    (
            PCTINCREASE      0
            BUFFER_POOL      DEFAULT
           )
LOGGING 
NOCOMPRESS 
NOCACHE;

COMMENT ON COLUMN AP_DIJANA.FLEX_OFFER_T.STATUS IS 'Open, reserved';


CREATE UNIQUE INDEX AP_DIJANA.OFFER_T_PK ON AP_DIJANA.FLEX_OFFER_T
